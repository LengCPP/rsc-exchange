# Domain
# This would be set to the production domain with an env var on deployment
# used by Traefik to transmit traffic and acquire TLS certificates
DOMAIN=localhost

# Used by the backend to generate links in emails to the frontend
FRONTEND_HOST=http://localhost:5173

# Environment: local, staging, production
ENVIRONMENT=local

PROJECT_NAME=rsc-xchange
STACK_NAME=rsc-xchange

# Backend
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://dashboard.localhost", "http://localhost", "http://localhost:8000", "http://api.localhost", "http://127.0.0.1:5173", "http://127.0.0.1", "http://127.0.0.1:8000"]

# Security - IMPORTANT: Change these values before deployment!
SECRET_KEY=changethis
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# Emails
# For development, emails are handled by mailcatcher (see docker-compose.override.yml)
# For production, configure your SMTP settings below
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# Postgres
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis

# Sentry (optional - for error tracking)
SENTRY_DSN=

# Configure these with your own Docker registry images
DOCKER_IMAGE_BACKEND=backend
DOCKER_IMAGE_FRONTEND=frontend

# CI environment variable to silence Docker Compose warnings
CI=false

# Minio
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=changethis
MINIO_STORAGE_BUCKET=rsc-xchange-images
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_PUBLIC_URL=http://localhost:9000

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
